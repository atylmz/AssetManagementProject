<script>
    $(document).ready(() => {
        $.ajax({
            url: "https://localhost:44378/api/Asset/listofassets",
            dataType: "json",
            contentType: "application/json: charset = UTF-8;",
            type: "get",
            success: function (result) {

                console.log(result);
                $(result).each(function (index, val) {
                    console.log(result);
                    var value = "<tr><td>" + " <input type='checkbox' /> " + "</td><td>" + val.barcode + "</td><td>" + val.assetType + "</td><td>" + val.price + "</td><td>" + val.brand + "</td><td>" + val.model + "</td></tr>";
                    $("tbody").append(value);
                });
                $('#dataTable').DataTable();
            },
            error: function (data) {
                console.log(data);
            }
        });


    });
</script>

